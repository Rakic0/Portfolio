extends ../base.pug

block variables
  - var template = 'project'

block content
  .project
    .project__wrapper
      a.project__to__home(href=Link(project.data.home)) Back to Home

      .project__about
        .project__about__titles
          h3.project__title(data-animation="label")=project.data.title
          span.project__role(data-animation="label")=project.data.role

        .project__description
          !=PrismicH.asHTML(project.data.description).replace(/<p>/g, '<p data-animation="label">')

        .project__info
          each item in project.data.info
            div
              h5.project__info__label(data-animation="label")=item.info_label
              p.project__info__text(data-animation="paragraph")=item.info_text
        
      .project__showcases
        video.project__showcase__video(playsinlin autoplay muted loop)
          source(src=project.data.project_showcase, type="video/webm")

        .project__images
          each image in project.data.full_website
            img.project__img(data-src=image.image.url, alt=image.image.alt)
    
      include ../partials/footer
